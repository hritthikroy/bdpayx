<!DOCTYPE html>
<html>
<head>
  <base href="$FLUTTER_BASE_HREF">
  <meta charset="UTF-8">
  <meta content="IE=Edge" http-equiv="X-UA-Compatible">
  <meta name="description" content="BDT to INR Currency Exchange App">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- iOS meta tags -->
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <meta name="apple-mobile-web-app-title" content="BDPayX">
  
  <!-- Google Sign In -->
  <meta name="google-signin-client_id" content="1071453270740-qojgn6bfqf2dhinr2etkmd92f0has46n.apps.googleusercontent.com">
  
  <title>BDPayX - Currency Exchange</title>
  <link rel="manifest" href="manifest.json">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    /* Material Icons - Optimized */
    @font-face {
      font-family: 'Material Icons';
      font-style: normal;
      font-weight: 400;
      font-display: block;
      src: url(https://fonts.gstatic.com/s/materialicons/v140/flUhRq6tzZclQEJ-Vdg-IuiaDsNc.woff2) format('woff2');
    }
    
    /* Roboto Font */
    @font-face {
      font-family: 'Roboto';
      font-style: normal;
      font-weight: 400;
      font-display: swap;
      src: url(https://fonts.gstatic.com/s/roboto/v30/KFOmCnqEu92Fr1Mu4mxK.woff2) format('woff2');
    }
    
    /* Loading Screen */
    #loading {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 50%, #A855F7 100%);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      transition: opacity 0.3s ease;
    }
    
    #loading.fade-out {
      opacity: 0;
    }
    
    .loader {
      width: 50px;
      height: 50px;
      border: 4px solid rgba(255, 255, 255, 0.3);
      border-top-color: white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    
    #loading-text {
      color: white;
      font-size: 18px;
      margin-top: 20px;
      font-weight: 500;
    }
  </style>
</head>
<body>
  <div id="loading">
    <div class="loader"></div>
    <div id="loading-text">Loading BDPayX...</div>
  </div>
  
  <script src="flutter_bootstrap.js" async></script>
  
  <script>
    window.addEventListener('load', function() {
      // Wait for fonts to be ready
      if (document.fonts && document.fonts.ready) {
        document.fonts.ready.then(function() {
          initializeApp();
        });
      } else {
        // Fallback if Font Loading API is not supported
        setTimeout(initializeApp, 100);
      }
    });
    
    function initializeApp() {
      console.log('Initializing BDPayX...');
      
      // Hide loading screen with fade effect
      var loading = document.getElementById('loading');
      if (loading) {
        loading.classList.add('fade-out');
        setTimeout(function() {
          loading.style.display = 'none';
        }, 300);
      }
    }
  </script>
</body>
</html>
